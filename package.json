{
  "name": "feeding-humanity",
  "version": "1.0.0",
  "description": "A donation and requirement management platform",
  "main": "server.js",
  "scripts": {
    "preinstall": "npm uninstall bcrypt || true",
    "postinstall": "npm uninstall bcrypt || true",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "node verify-no-bcrypt.js && node test-bcrypt-shim.js && echo 'No build step required'",
    "generate-ssl": "node generate-ssl.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "nodemailer": "^6.10.1",
    "nodemon": "^3.1.9",
    "uuid": "^11.1.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "overrides": {
    "bcrypt": "file:./bcrypt-shim.js"
  }
}
